@model ExcelRead.Models.ExcelViewModel
@{
    ViewData["Title"] = "Read Text File";
}
<div class="row">
    <div class="col-md-12">
        <form action="/Home/TextRead" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Text File (.txt)</label>
                <input required type="file" accept=".txt" id="file" name="file">
                <p class="help-block">Select only .txt</p>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
    <div class="col-md-12">
        @if (Model != null)
        {
            <div class="panel panel-default">
                <div class="panel-body">
                    @Html.Raw(Model.Data)
                </div>
            </div>
            }
    </div>
</div>
