@model ExcelRead.Models.ExcelViewModel
@{
    ViewData["Title"] = "Read CSV File";
}
<div class="row">
    <div class="col-md-12">
        <form action="/Home/CSVRead" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">CSV File (.csv)</label>
                <input required type="file" accept="text/csv, .csv" id="file" name="file">
                <p class="help-block">Select only .csv</p>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
    <div class="col-md-12">
        @if (Model != null)
        {
            <table class="table table-bordered table-hover">
                @Html.Raw(Model.Data)
            </table>
        }
    </div>
</div>
